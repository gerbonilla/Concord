// search is submitted on Profile#show page

// first make answer wrapper empty
$('.answer-wrapper').empty()

// determine which answer to render

// "No Answer" - render Answer Not Found
<% if @search == "No Answer" %>
  var new_answer = $("<%= j render 'shared/answer_not_found' %>").hide();
  $('.answer-wrapper').append(new_answer);
  new_answer.slideDown();
<% end %>

