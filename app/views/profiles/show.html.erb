<h2>Welcome <%= @profile.first_name %></h2>

<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <!-- Leave blank intentionally -->
    </div>
    <% @profile.accounts.each do |account| %>
    <div class="col-xs-<%= account.portfolios.count %>">
      <p><%= account.brokerage_name %></p>
    </div>
    <% end %>
  </div>
  <% Position::ASSET_CLASSES.each do |l1_key, l1_value| %>
  <div class="row sac1">
    <div class="col-xs-2"><%= l1_key.to_s.gsub('_', " ") %></div>
  </div>
    <% l1_value.each do |l2_key, l2_value| %>
      <div class="row sac2">
        <div class="col-xs-2">&nbsp<%= l2_key.to_s.gsub('_', " ") %></div>
      </div>
      <% l2_value.each do |l3_value| %>
        <div class="row sac3">
          <div class="col-xs-2">&nbsp&nbsp<%= l3_value %></div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<br>
<br>
<br>
<div id="quovo-widget"></div>

<%= link_to "Update Accounts", profile_path(@profile), method: :put %>



<!-- {token} is generated by a backend process every time the page is loaded. -->
<script
type="text/javascript"
src="https://connect.quovo.com/connect.js"
data-connect-id="quovo-widget"
data-token=<%= @token %>>
</script>
