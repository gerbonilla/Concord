<%= form_tag(profile_path(@profile), method: "get", class: "concord-form form-inline", remote: true) do %>
  <div class="form-group">
  <%= text_field_tag(:search, "", class: "form-control", id: "search-bar") %>
  <%= submit_tag("Go", class: "btn btn-concord-bg search-btn form-control", id: "go-btn") %>
  </div>
<% end %>
<br>

<!-- update and connect buttons -->
<div class="dashboard-button-wrapper">
<div class="small-margin" id="quovo-widget"></div>
<%= link_to "Update Accounts", profile_path(@profile), method: :put, class: "btn btn-no-bg small-margin" %>
</div>
<br>

<!-- Render Intents depending on search results -->
<%= render 'shared/cas' %>


<!-- {token} is generated by a backend process every time the page is loaded. -->
<%= content_for :after_js do %>
<script
type="text/javascript"
src="https://connect.quovo.com/connect.js"
data-connect-id="quovo-widget"
data-token=<%= @token %>>
</script>

<% end %>
