<h2>Welcome <%= @profile.first_name %></h2>

<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <!-- Leave blank intentionally -->
    </div>
    <% @profile.accounts.each do |account| %>
    <div class="col-xs-<%= account.portfolios.count %>">
      <p><%= account.brokerage_name %></p>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-2">
      <!-- Leave blank intentionally -->
    </div>
    <% @profile.accounts.each do |acct| %>
    <% acct.portfolios.each do |portfolio| %>
    <div class="col-xs-1">
      <p><%= portfolio.portfolio_name %></p>
    </div>
    <% end %>
    <% end %>
  </div>
  <% Position::ASSET_CLASSES.each do |sac1, sac2_values| %>
  <div class="row sac1">
    <div class="col-xs-2"><%= sac1.to_s.gsub('_', " ") %></div>
    <div class="col-xs-1"><%= money_without_cents Money.new(@asset_class[sac1.to_s.gsub('_', " ")]) %></div>
  </div>
  <% sac2_values.each do |sac2, sac3_values| %>
  <div class="row sac2">
    <div class="col-xs-2">&nbsp<%= sac2.to_s.gsub('_', " ") %></div>
    <div class="col-xs-1"><%= money_without_cents Money.new(@asset_class[sac2.to_s.gsub('_', " ")]) %></div>
  </div>
  <% sac3_values.each do |sac3| %>
  <div class="row sac3">
    <div class="col-xs-2">&nbsp&nbsp<%= sac3 %></div>
    <div class="col-xs-1"><%= money_without_cents Money.new(@asset_class[sac3.to_s.gsub('_', " ")]) %></div>
  </div>
  <% end %>
  <% end %>
  <% end %>
</div>

<br>
<br>
<br>
<div id="quovo-widget"></div>

<%= link_to "Update Accounts", profile_path(@profile), method: :put %>



<!-- {token} is generated by a backend process every time the page is loaded. -->
<script
type="text/javascript"
src="https://connect.quovo.com/connect.js"
data-connect-id="quovo-widget"
data-token=<%= @token %>>
</script>
